{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["es2022"],
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "skipLibCheck": true
  },
  "exclude": ["./dist"],
  "paths": {
    "*": ["*.d.ts"]
  }
}
